<div class="container">
<h1>Listing books</h1>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Author</th>
    <th>Content</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>

        <td><%= link_to 'Show', book %></td>

        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>

  </tbody>

</table>
<%= paginate @books %>
<br>

</div>4