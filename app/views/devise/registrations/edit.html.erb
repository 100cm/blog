<h2>Edit <%= resource_name.to_s.humanize %></h2>
<div class="panel devise-panel">
  <div class="panel-body">
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.input :email, as: :string, required: false, autofocus: true, label: false, placeholder: "Email address", input_html: {class: "form-control"} %>

  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
     <i>(leave blank if you don't want to change it)</i><br />
    <%= f.input :password, autocomplete: "off" ,input_html: {class: "form-control"} %>
  </div>

  <div class="field">

    <%= f.input :password_confirmation, autocomplete: "off" ,input_html: {class: "form-control"}%>
  </div>

  <div class="field">
   <i>(we need your current password to confirm your changes)</i><br />
    <%= f.input :current_password, autocomplete: "off" ,input_html: {class: "form-control"}%>
  </div>

  <div class="actions">
    <%= f.submit "Update" ,id:"more_btn",style:"color:#ea4c89",class:"btn btn-default"%>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name),class:"btn btn-default",id:"more_btn", data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
    </div>
</div>