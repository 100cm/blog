
<div class="container">
  <div class="panel devise-panel" >
<div class="panel-heading text-center ">
  <a href="#" class="sign-title">
   Sign up
  </a>
</div>
<div class="panel-body">
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>


  <div class="field">
    <%= f.label :email %><br />
    <%= f.input :email, as: :string, required: false, autofocus: true, label: false, placeholder: "Email address", input_html: {class: "form-control"} %>

  </div>
      <div class="field">
        <%= f.label :username %><br />
        <%= f.input :username, as: :string, required: false, autofocus: true, label: false, placeholder: "Username", input_html: {class: "form-control"} %>

      </div>

  <div class="field">


    <%= f.input :password, autocomplete: "off",placeholder:"Your password" %>  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.input :password_confirmation, required: true, label: false,  input_html: {class: "form-control"}, placeholder: "Confirm password" %>

  </div>

  <div class="actions">
    <%= f.submit "Sign up" ,value:"Create an account",id:"more_btn", class: "btn btn-block btn-primary mt-lg"%>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
      </div>
    </div>